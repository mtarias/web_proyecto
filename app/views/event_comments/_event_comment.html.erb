<div class="eventcomment">
	<p style="float:right; padding-right:20px">
	  <%= link_to 'X', event_comment.event, event_comment],
	               :confirm => 'Are you sure?',
	               :method => :delete %>
	</p>
	<p>
	  <% user= User.find(session[:user_id]) %><br />
	  <%= user.email %>
	</p>
	<p>
	  <b>Comentario:</b>
	  <%= event_comment.comment %>
	</p>
</div>