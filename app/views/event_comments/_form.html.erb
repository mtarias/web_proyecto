<div class="neweventcomment">
	<%= form_for([@event, @event.event_comments.build]) do |f| %>
	  <% f.label session[:user_id] %>
	  <div class="field">
	    <%= f.label :comment %><br />
	    <%= f.text_field :comment %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>