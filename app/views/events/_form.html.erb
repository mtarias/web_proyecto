
  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2>Existen <%= pluralize(@event.errors.count, "error") %> errores!</h2>

        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "Nombre del evento" %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "Fecha a realizarse" %><br />
      <%= f.datetime_select :date %>
    </div>
    <div class="field">
      <%= f.label "Lugar" %><br />
      <%= f.text_field :place %>
    </div>
    <div class="field">
      <%= f.label "Agrega una descripciÃ³n" %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.check_box :is_private %>
      <%= f.label "Evento privado" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
