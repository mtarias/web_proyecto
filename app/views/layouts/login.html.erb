<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> - Eventmaker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="header">
		<% if flash[:notice] %>
			<div id="notice"><%= flash[:notice] %></div> 
		<% end %>
		<div class="fixedtop">
			<div id="logo">
				<h1><%= link_to "EventMaker", :root %></h1>
			</div>
			<div class="login">
				<% user = User.find(session[:user_id]) %>
				<%= link_to "#{user.name}", profile_path %>
				<%= link_to I18n.t(:logout), logout_path, :confirm => I18n.t(:logout?) %>
			</div>
		</div>
		
	</div>
<%= yield %>

</body>
</html>
