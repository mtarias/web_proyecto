<!DOCTYPE html>
<html>
<head>
  <title>Eventmaker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="header">
		<div class="fixedtop">
			<div id="logo">
				<h1><%= link_to "EventMaker", :root %></h1>
			</div>
			<div class="login">
				<% if session[:user_id] %>
					<% user = User.find(session[:user_id]) %>
					<%= link_to "#{user.email}", profile_path %>
					<%= link_to I18n.t(:logout), logout_path, :confirm => I18n.t(:logout?) %>
				<% end %>
				<div id="header">
				<% if flash[:notice] %>
		      		<p id="notice"><%= flash[:notice] %></p> 
		      	<% end %>
		      	</div>
			</div>
		</div>
		
	</div>
<%= yield %>

</body>
</html>
