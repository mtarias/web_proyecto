<h1><%= I18n.t('group_tittle') %></h1>

<p><%= link_to I18n.t('new_group'), new_group_path %></p>

<table>
<% @groups.each do |group| %>
    <tr>
        <td>
            <h2><%= link_to(group.group_name, group) %><%= " (#{group.group_members.length})" %></h2>
        </td>
    </tr>
    <tr>
        <td>
        <%= form_tag(:controller => 'groups', :action => 'add_members') do %>
        <%= text_field_tag :new_members %>
        <%= hidden_field_tag :group_id, group.id %>
        <%= submit_tag t(:add_friends) %>
        <% end %>
        </td>
    </tr>
<% end %>
</table>
