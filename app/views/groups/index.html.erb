<h1>Mis Grupos de amigos</h1>

<%= link_to 'Crear Nuevo Grupo', new_group_path %>
<table>
  <tr>
    <th>Group name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.group_name %></td>
    <td><%= link_to 'Ver grupo de amigos', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Eliminar grupo', group, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

