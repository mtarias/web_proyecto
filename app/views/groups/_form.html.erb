<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :group_name %><br />
    <%= f.text_field :group_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div>
    <%= form_tag @group, :method => 'get' do %>
        <p>Invita a un amigo:</p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
    <% end %>
    <% unless @friends.nil?
      unless @friends.empty? %>
        <p><%= link_to "Agregar a #{@friends.first.email}", add_friend_path(@group, @friends.first) %></p>
      <% else %>
        El usuario ya fue agregado
      <% end %>
    <% end %>
  </div>
<% end %>
