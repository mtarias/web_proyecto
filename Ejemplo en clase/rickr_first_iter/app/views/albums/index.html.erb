<h1>Listing albums</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Usuario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.nombre %></td>
    <td><%= album.descripcion %></td>
    <td><%= album.usuario.nombre %></td>
    <td><%= link_to album.usuario.nombre, album.usuario %></td>
    <td><%= link_to 'Ver Fotos', fotos_del_album_path(album.id) %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

